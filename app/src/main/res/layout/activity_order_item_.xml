<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".customerOrder.order_item_Activity"
    android:background="@drawable/gradient_blue"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/tripset"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:gravity="left"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:gravity="left"
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:text="date"
            android:textSize="18dp"
            android:textColor="#8E8E8E"
            android:layout_alignLeft="@id/title"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:gravity="left"
            android:id="@+id/people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:text="people"
            android:textSize="18dp"
            android:textColor="#8E8E8E"
            android:layout_alignLeft="@id/title"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:gravity="left"
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/people"
            android:text="price per person"
            android:textSize="18dp"
            android:textColor="#8E8E8E"
            android:layout_alignLeft="@id/title"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/text1"
            android:gravity="left"
            android:layout_below="@id/price"
            android:textColor="#8E8E8E"
            android:layout_alignLeft="@id/title"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="除了您已有 "
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            ></TextView>
        <TextView
            android:id="@+id/order_amount"
            android:gravity="left"
            android:layout_below="@id/price"
            android:layout_toRightOf="@id/text1"
            android:textColor="#8E8E8E"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            ></TextView>
        <TextView
            android:id="@+id/text2"
            android:gravity="left"
            android:layout_below="@id/price"
            android:textColor="#8E8E8E"
            android:layout_toRightOf="@id/order_amount"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 人訂購此行程"
            android:layout_marginTop="5dp"
            ></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tripset"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:id="@+id/order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更改人數"
            android:textSize="30sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成人"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_below="@id/order_title"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/input_old"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:inputType="textFilter"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_toRightOf="@id/adult"
            android:layout_alignBaseline="@id/adult"
            />

        <TextView
            android:id="@+id/child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小孩"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_below="@id/adult"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/input_adult"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:inputType="textFilter"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_toRightOf="@id/child"
            android:layout_alignBaseline="@id/child"
            />

        <TextView
            android:id="@+id/baby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嬰兒"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_below="@id/child"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/input_baby"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:inputType="textFilter"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_toRightOf="@id/baby"
            android:layout_alignBaseline="@id/baby"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/order"
        android:layout_alignLeft="@id/order"
        android:layout_alignRight="@id/order"
        >

        <Button
            android:id="@+id/certain"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:text="確定更改"
            android:textSize="25sp"
            android:onClick="certain"
            android:background="@drawable/round_button_white"
            />

        <Button
            android:id="@+id/cancel"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:text="取消更改"
            android:textSize="25sp"
            android:onClick="cancel"
            android:background="@drawable/round_button_white"
            />

        <Button
            android:id="@+id/delete"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/certain"
            android:text="刪除"
            android:textSize="25sp"
            android:onClick="delete"
            android:background="@drawable/round_button_white"
            />
    </RelativeLayout>

</RelativeLayout>
</ScrollView>